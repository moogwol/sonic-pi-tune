# Create a tune where the melody and bassline follow the chord changes
# Set the BPM for the track
use_bpm 180

# Create a variable that controls the melody, bassline and chords
# Set the current root note for the track
root = 45

# Make a beat
live_loop :beats do
  sample :bd_zome
  sleep 1
  sample :drum_cymbal_closed
  sleep 1
  sample :bd_zome
  sample :drum_snare_soft
  sleep 1
  sample :drum_cymbal_closed
  sleep 1
end


# Make a melody
# Make a bassline
define :bass_notes do |root|
  use_synth :chipbass
  sleep 1
  play root
  sleep 1
end
# Make a chord


# Play the bass-line
live_loop :bass_line do
  bass_notes root
end
